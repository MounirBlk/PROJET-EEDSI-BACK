        "start": "pm2 kill && pm2 start dist/app.js --watch && pm2 logs",
        "serve": "pm2 kill && npm run clean && npm run build && pm2 start dist/app.js --watch && pm2 logs",
        "dev": "nodemon app.ts",
        "clean": "rimraf ./dist",
        "build": "tsc -p ./tsconfig.json && npm run copy-assets",
